{
  "expo": {
    "name": "Kanteen",
    "slug": "kanteen",
    "version": "1.0.1",
    "scheme": "kanteen",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash-new-v2.png",
      "resizeMode": "contain",
      "backgroundColor": "#132439"
    },
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#FF4757",
      "androidMode": "default",
      "androidCollapsedTitle": "{{unread_count}} new notifications"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kanteen.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Kanteen needs camera access to scan meal tickets."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#132439"
      },
      "package": "com.kanteen.app",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "NOTIFICATIONS",
        "CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#FF4757",
          "sounds": []
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Kanteen to access your camera to scan meal tickets."
        }
      ]
    ]
  }
}